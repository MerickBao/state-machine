<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.StateMachineDAO">

    <select id="getStateMachineById" parameterType="java.lang.Integer" resultType="com.example.demo.domain.StateMachineEntity">
        select * from t_state_machine where id = #{id}
    </select>

    <select id="getStateMachineIds" resultType="java.lang.Integer">
        select id from t_state_machine
    </select>

    <update id="updateStateMachine" parameterType="com.example.demo.domain.StateMachineEntity">
        update t_state_machine set description = #{description}, currentStateId = #{currentStateId} where id = #{id}
    </update>

    <update id="resetStateMachine">
        update t_state_machine set currentStateId = #{stateId} where id = #{machineId}
    </update>

</mapper>